<%- include('../partials/header') %>

<div id="new-post-div">
  <form id="new-post-form" action="/<%= user._id %>/add-post" method="POST">
    <h1>New Post:</h1>
    <div>
      <input type="text" name="img" placeholder="img-url" style="width: 240px" />
    </div>
    <br />
    <div>
      <textarea name="caption" cols="30" rows="5" placeholder="Type your caption..."></textarea>
    </div>
    <br />
    <div>
      <button type="submit" class="btn btn-success">Post</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
