<%- include('../partials/header') %>

<h1>Add Comment</h1>

<form action="/<%= user._id %>/<%= post._id %>/add-comment" method="POST">
  <textarea name="content" cols="30" rows="5" placeholder="Type comment..."></textarea>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<% post.comments.forEach(c => { %>
<ul class="container m-4">
  <li><%= c.user.firstName %> <%= c.user.lastName %>: <%= c.content %>
    <% if (user._id.equals(c.user._id)) { %>
        <form action="/<%= user._id %>/<%= post._id %>/delete?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
        </form>
    <% } %>
</li>
</ul>
<% }); %> <%- include('../partials/footer') %>
